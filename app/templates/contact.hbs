{{partial 'navbar'}}

<div class="contact_page">
  <h3>Contact</h3>
  <div class="form-horizontal form-group form-group-lg row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-6 col-md-offset-1 connect_horizental">
      {{ input type="text" class="form-control" value=nom placeholder="Entrer votre nom." autofocus="autofocus" }}
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-6 col-md-offset-1 connect_horizental">
      {{ input type="email" class="form-control" value=email placeholder="Entrer votre email." autofocus="autofocus" }}
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 connect_horizental">
      {{textarea  class="form-control"  value=message placeholder="Entrer votre message."}}
    </div>

    <div class="col-xs-10 col-xs-offset-1 col-sm-offset-1 col-sm-10 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
      <button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action 'verifyMessage'}}>Nous contacter</button>
    </div>
  </div>



  {{#if responseMessage}}
    <div class="alert alert-danger">{{responseMessage}}</div>
  {{/if}}
</div>


{{outlet}}
