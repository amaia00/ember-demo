
<label>{{etudiant.nom}}, {{etudiant.prenom}}</label><br/>
<label>Identifiant: {{etudiant.identifiant}}</label><br/>
{{#each etudiant.notes as |note|}}

  {{#if-equal param1=note.ue.id param2=ue.id}}
    <div class="form-inline">

      {{input type="number" min="0" max="20" value=note.cc1 class="form-control"
              placeholder="CC1" style="background-color: {{get-color note.cc1}}"}}
      {{input type="number" min="0" max="20" value=note.cc2 class="form-control"
              placeholder="CC2" style="background-color: {{get-color note.cc2}}"}}
      {{input type="number" min="0" max="20" value=note.ccf class="form-control"
              placeholder="CCF" style="background-color: {{get-color note.ccf}}"}}

      <button class="btn btn-primary btn-orange btn-sm" {{action 'saveNote' note}}>Save</button>

      {{student-average note=note}}
    </div>

  {{/if-equal}}
{{/each}}